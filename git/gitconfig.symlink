[user]
	name = Kristian Glass
	email = git@doismellburning.co.uk
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[alias]
	co = checkout
	graph = log --graph --decorate --all
	addp = add --patch
	logdiff = log --patch
	branches = branch -v
[core]
	excludesfile = ~/.gitignore_global
[push]
	default = current
[diff]
	wordregex = [[:alnum:]]+|[^[:space:]]
